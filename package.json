{
  "name": "perfume-ecommerce",
  "version": "1.0.0",
  "description": "E-commerce website for perfumes",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Build completed - no compilation needed' && exit 0",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "create-admin": "node scripts/create-admin.js"
  },
  "keywords": ["ecommerce", "perfumes", "nodejs"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "bcrypt": "^5.1.1",
    "sqlite3": "^5.1.6",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "ejs": "^3.1.9"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.11"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
